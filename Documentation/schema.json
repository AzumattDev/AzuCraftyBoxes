{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AzuCraftyBoxes Configuration",
  "description": "Schema for configuring groups and container behaviors in AzuCraftyBoxes.",
  "type": "object",
  "properties": {
    "groups": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "containers": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "properties": {
            "exclude": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "includeOverride": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        }
      }
    }
  },
  "additionalProperties": false
}
